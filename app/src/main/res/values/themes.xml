<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Lazlo" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabTextAppearance">@style/TextAppearance.MaterialComponents.tabText</item>
    </style>
    <style name="TextAppearance.MaterialComponents.tabText" parent="">
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">#ff3d00</item>
        <item name="colorSurface">#000000</item>
        <item name="colorOnSurface">#ffffff</item>
    </style>
</resources>