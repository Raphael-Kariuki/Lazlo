<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
       >
        <LinearLayout
            android:id="@+id/imgStatusNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/trial_image_round"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/usernameInMyAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name here"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/accountStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Watch out frodo"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    />

            </LinearLayout>
        </LinearLayout>

<GridLayout
    android:id="@+id/menus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >
    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btnDashBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Dashboard\n\n View statistics"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textStyle="bold"
        android:drawableTop="@drawable/ic_baseline_dashboard_24"
        android:textColor="@color/black"
        android:padding="20dp"
        android:background="@drawable/dashboard_background"
        android:layout_weight="1"
        android:layout_margin="@dimen/activity_vertical_margin"
        />
    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btn_tasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Tasks\n View and edit tasks"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textStyle="bold"
        android:drawableTop="@drawable/ic_baseline_pending_actions_24"
        android:textColor="@color/black"
        android:padding="20dp"
        android:background="@drawable/task_background"
        android:layout_weight="1"
        android:layout_margin="@dimen/activity_vertical_margin"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/inHouse_btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Security\n Reset your password"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textStyle="bold"
            android:drawableTop="@drawable/ic_baseline_security_24"
            android:textColor="@color/black"
            android:padding="20dp"
            android:background="@drawable/security_background"
            android:layout_weight="1"
            android:layout_margin="@dimen/activity_vertical_margin"
            />
        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Logout\n End your session"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textStyle="bold"
            android:drawableTop="@drawable/ic_baseline_power_settings_new_24"
            android:textColor="@color/black"
            android:padding="20dp"
            android:background="@drawable/logout_background"
            android:layout_weight="1"
            android:layout_margin="@dimen/activity_vertical_margin"
            />
    </LinearLayout>



</GridLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:text="from "
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/grey"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:text="Traplab Inc."
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                >

            </com.google.android.material.textview.MaterialTextView>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>