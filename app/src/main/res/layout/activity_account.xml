<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
       >
        <LinearLayout
            android:id="@+id/imgStatusNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/trial_image_round"
                android:layout_marginBottom="40dp"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="4">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/usernameInMyAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name here"
                    android:gravity="start"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:padding="@dimen/activity_vertical_margin"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/accountStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="...."
                    android:gravity="start"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    />

            </LinearLayout>
        </LinearLayout>

<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/menus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">



    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btnDashBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dashboard\n View statistics"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_baseline_dashboard_24"
        android:textColor="@color/black"
        android:padding="10dp"
        android:background="@color/white"
        android:textAlignment="viewEnd"
        />
    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btn_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tasks\n View and edit tasks"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_baseline_pending_actions_24"
        android:textColor="@color/black"
        android:padding="10dp"
        android:background="@color/white"
        android:textAlignment="viewEnd"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/inHouse_btnResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Security\n Reset your password"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_baseline_security_24"
        android:textColor="@color/black"
        android:padding="10dp"
        android:background="@color/white"
        android:textAlignment="viewEnd"
        />
    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout\n End your session"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_baseline_power_settings_new_24"
        android:textColor="@color/black"
        android:padding="10dp"
        android:background="@color/white"
        android:textAlignment="viewEnd"
        />
</androidx.appcompat.widget.LinearLayoutCompat>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:text="from "
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/grey"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:text="Traplab Inc."
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                >

            </com.google.android.material.textview.MaterialTextView>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>