<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/le_titre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="10dp"
                android:text="Dashboard"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/monthSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/le_titre"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:hint="Choose a month"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/black"
                >

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/monthsSelectionDropDownOnDashBoard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/quickStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/monthSelection"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/totalTasksPerMonth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/uno"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/black_border"
                        android:gravity="center"
                        android:text="Total tasks"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:textStyle="bold"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/totalTasksCompletedPerMonth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/uno"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/black_border"
                        android:gravity="center"
                        android:text="Completed tasks"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:textStyle="bold"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/totalTasksPendingPerMonth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/uno"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/black_border"
                        android:gravity="center"
                        android:text="Pending tasks"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:textStyle="bold"

                        />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/spendingView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/quickStats"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="Spending view"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnMonthlySpendingView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_baseline_date_range_24"
                        android:text="Monthly"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCustomSpendingView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_baseline_date_range_24"
                        android:text="Custom"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        />

                </LinearLayout>


            </LinearLayout>

            <TableLayout
                android:id="@+id/monthlyTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spendingView"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Jan"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@drawable/month_bg"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/Jan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Kshs "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@drawable/month_bg"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
