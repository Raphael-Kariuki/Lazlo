                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="May"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@drawable/month_bg"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/May"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Kshs "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@drawable/month_bg"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="June"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@drawable/month_bg"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/Jun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Kshs "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@drawable/month_bg"/>
                    </LinearLayout>



                </TableRow>

                <TableRow>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="July"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@drawable/month_bg"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/Jul"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Kshs "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@drawable/month_bg"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Aug"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@drawable/month_bg"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/Aug"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Kshs "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@drawable/month_bg"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Sept"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@drawable/month_bg"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/Sept"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Kshs "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@drawable/month_bg"/>
                    </LinearLayout>



                </TableRow>
                <TableRow>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Oct"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@drawable/month_bg"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/Oct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Kshs "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@drawable/month_bg"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Nov"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@drawable/month_bg"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/Nov"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
