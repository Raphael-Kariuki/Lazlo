<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalPage"
  >
        <LinearLayout
            android:id="@+id/accountActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/userName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

        </LinearLayout>

<LinearLayout
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="40dp"
    >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/homeTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/home"
            android:textSize="9sp"
            android:drawableTop="@drawable/ic_baseline_home_24"
            android:textColor="@color/white"
            android:background="@color/cardview_dark_background"
            android:padding="10dp"
            android:layout_margin="0.01dp"


            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shoppingTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/shopping"
            android:textSize="9sp"
            android:drawableTop="@drawable/ic_baseline_shopping_cart_24"
            android:textColor="@color/white"
            android:background="@color/cardview_dark_background"
            android:padding="10dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/schoolTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_school_24"
            android:text="@string/school"
            android:textSize="9sp"
            android:textColor="@color/white"
            android:background="@color/cardview_dark_background"
            android:padding="10dp"
            android:layout_margin="0.01dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/businessTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/business"
            android:textSize="9sp"
            android:drawableTop="@drawable/ic_baseline_business_24"
            android:textColor="@color/white"
            android:background="@color/cardview_dark_background"
            android:padding="10dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/workTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/work"
            android:textSize="9sp"
            android:drawableTop="@drawable/ic_baseline_work_24"
            android:textColor="@color/white"
            android:background="@color/cardview_dark_background"
            android:padding="10dp"
            android:layout_margin="0.01dp"
            />
</LinearLayout>




        <ListView
            android:id="@+id/task_listView"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/black"
            android:dividerHeight="2dp"
            android:headerDividersEnabled="true"
            android:padding="@dimen/activity_vertical_margin"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_addTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/add_task"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_baseline_add_24"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="@dimen/activity_vertical_margin"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/hamburger_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_baseline_more2_vert_24"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:contentDescription="@string/menu" />

        <TextView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


</FrameLayout>