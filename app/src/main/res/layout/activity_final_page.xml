<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalPage"
  >
        <LinearLayout
            android:id="@+id/accountActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Non"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/hamburger_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_baseline_more_vert_24"
                    android:layout_gravity="end"
                    />
        </LinearLayout>

<LinearLayout
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="40dp"
    >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/homeTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:textSize="10sp"
            android:drawableStart="@drawable/ic_baseline_home_24"
            android:textColor="@color/black"

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/schoolTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_baseline_school_24"
            android:text="School"
            android:textSize="10sp"
            android:textColor="@color/black"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/businessTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Business"
            android:textSize="10sp"
            android:drawableStart="@drawable/ic_baseline_business_24"
            android:textColor="@color/black"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/workTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Work"
            android:textSize="10sp"
            android:drawableStart="@drawable/ic_baseline_work_24"
            android:textColor="@color/black"/>
</LinearLayout>




        <ListView
            android:id="@+id/task_listView"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_addTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/add_task"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_baseline_add_24"
            tools:ignore="ImageContrastCheck"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/activity_vertical_margin"
            />

        <TextView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


</FrameLayout>