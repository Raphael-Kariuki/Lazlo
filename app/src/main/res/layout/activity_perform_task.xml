<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".performTask"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnStartTask2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:background="@drawable/pie"
                android:backgroundTint="@color/black"
                android:gravity="bottom"
                android:src="@drawable/ic_baseline_play_arrow_24"
                app:backgroundTint="@color/black" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnResumeTask"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:background="@drawable/pie"
                android:backgroundTint="@color/black"
                android:gravity="bottom"
                android:src="@drawable/ic_baseline_play_arrow_24"
                app:backgroundTint="@color/black" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnPauseTask"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:background="@drawable/pie"
                android:backgroundTint="@color/black"
                android:gravity="bottom"
                android:src="@drawable/ic_baseline_pause_24"
                app:backgroundTint="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancelDoingTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:drawableStart="@drawable/ic_baseline_close_24"
                android:text="Cancel"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCompleteDoingTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:drawableStart="@drawable/ic_baseline_check_24"
                android:text="Complete"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>